{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/apps/jentz-api",
    "baseUrl": "./",
    "module": "commonjs",
    "declaration": true,
    "types": ["node"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}