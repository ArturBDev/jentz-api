{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    "lib": ["ES2020", "DOM"], 
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "incremental": true,
    "paths": {},
  }
}